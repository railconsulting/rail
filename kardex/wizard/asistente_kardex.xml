<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="kardex_asistente_kardex" model="ir.ui.view">
            <field name="name">kardex_asistente_kardex</field>
            <field name="model">asistente.kardex</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Seleccione cuenta y rango de fecha">
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="warehouse_ids" string="Warehouse" widget="many2many_tags"
                                    domain="[('company_id','=',company_id)]" options="{'no_create':True,'no_edit':True}"/>
                            <field name="location_ids" string="Location"  widget="many2many_tags" 
                                    options="{'no_create':True,'no_edit':True}" context="{'warehouse_ids':warehouse_ids,'company_id':company_id}"/>
                            <field name="name" invisible="1"/>
                            <field name="xls_file" readonly="1" filename="name" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <footer>
                        <!--button name="print_report" string="Reporte PDF" type="object" class="oe_highlight"/-->
                        <button name="xls_export_dwn" string="Reporte XLS" type="object" class="oe_highlight"/>
                        <!--button name="reporte_tree_view" string="View Reporte" type="object" class="oe_highlight"/-->
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="window_reporte_kardex" model="ir.actions.act_window">
            <field name="name">Kardex</field>
            <field name="res_model">asistente.kardex</field>
            <!-- <field name="src_model">product.product</field> -->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="window_reporte_kardex" id="menu_asistente_kardex" parent="stock.menu_warehouse_report"/>

        <record id="action_reporte_kardex" model="ir.actions.report">
            <field name="name">kardex.reporte_kardex</field>
            <field name="model">asistente.kardex</field>
            <field name="binding_model_id" ref="model_asistente_kardex"/>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">kardex.reporte_kardex</field>
            <field name="report_file">kardex.reporte_kardex</field>
        </record>
        
<!--         <report id="action_reporte_kardex" model="kardex.asistente_kardex" string="Kardex" report_type="qweb-pdf" name="kardex.reporte_kardex" file="kardex.reporte_kardex"/> -->


        <record id="kardex_asistente_kardex_custom_report_tree_view" model="ir.ui.view">
            <field name="name">Kardex</field>
            <field name="model">kardex.asistente_kardex.custom.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="documents"/>
                    <field name="order_ref"/>
                    <field name="invoice_ref"/>
                    <field name="partner_name"/>
                    <field name="tipo"/>
                    <field name="uom"/>
                    <field name="qty1"/>
                    <field name="qty2"/>
                    <field name="saldo"/>
                    <field name="cost" groups="access_cost_price_product.hide_cost_product"/>
                    <field name="total" groups="access_cost_price_product.hide_cost_product"/>
                </tree>
            </field>
        </record>

        <record id="kardex_asistente_kardex_custom_report_action" model="ir.actions.act_window">
            <field name="name">Kardex Report</field>
            <field name="res_model">kardex.asistente_kardex.custom.report</field>
            <field name="view_mode">tree</field>
        </record>

</odoo>
