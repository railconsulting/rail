<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="rail_odoo_approvals" model="ir.module.category">
            <field name="name">Approvals</field>
        </record>

        <record id="group_approval_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="rail_odoo_approvals"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_approval_manager" model="res.groups">
            <field name="name">Settings</field>
            <field name="category_id" ref="rail_odoo_approvals"/>
            <field name="implied_ids" eval="[(4, ref('rail_odoo_approvals.group_approval_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="id_multi_approval_on_unlink_rule" model="ir.rule">
            <field name="name">Rule on Multi Approval: Delete Draft Request Only</field>
            <field name="model_id" ref="rail_odoo_approvals.model_multi_approval"/>
            <field name="global" eval="True"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="0"/>
            <field name="domain_force">[('state','=', 'Draft')]</field>
        </record>
        <record id="id_multi_approval_user_rule" model="ir.rule">
            <field name="name">Rule on Multi Approval: Read my own</field>
            <field name="model_id" ref="rail_odoo_approvals.model_multi_approval"/>
            <field name="groups" eval="[(4, ref('rail_odoo_approvals.group_approval_user'))]"/>
            <field name="domain_force">['|','|', ('user_id','=', user.id), ('user_id','=', False), ('pic_id','=', user.id)]</field>
        </record>
        <record id="id_multi_approval_follower_rule" model="ir.rule">
            <field name="name">Rule on Multi Approval: Followers</field>
            <field name="model_id" ref="rail_odoo_approvals.model_multi_approval"/>
            <field name="groups" eval="[(4, ref('rail_odoo_approvals.group_approval_user'))]"/>
            <field name="domain_force">[('follower','like', user.env['multi.approval'].get_follow_key())]</field>
        </record>    
        <record id="id_multi_approval_setting_rule" model="ir.rule">
            <field name="name">Rule on Multi Approval: Admin</field>
            <field name="model_id" ref="rail_odoo_approvals.model_multi_approval"/>
            <field name="groups" eval="[(4, ref('rail_odoo_approvals.group_approval_manager'))]"/>
            <field name="domain_force">[(1,'=', 1)]</field>
        </record> 
        <!--Multi level approval configuration-->   
        <record id="id_multi_approval_type_on_unlink_rule" model="ir.rule">
            <field name="name">Rule on Multi Approval Type: Delete Unconfigued Type Only</field>
            <field name="model_id" ref="rail_odoo_approvals.model_multi_approval_type"/>
            <field name="global" eval="True"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="0"/>
            <field name="domain_force">[('is_configured','=', False)]</field>
        </record>
    </data>
</odoo>
