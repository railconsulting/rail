<?xml version='1.0' encoding='utf-8'?>
<odoo>
<record id="view_move_factoring_form" model="ir.ui.view">
    <field name="name">account.move.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
        <xpath expr="//button[@name='action_reload_ai_data']" position="after" >
          <button name="factor_invoice" type="object" string="Factor Invoice" groups="factoringapp.group_factoring" invisible="state == 'draft' or payment_state != 'not_paid' or factoring_status in ('sent','approved','paid') or move_type != 'out_invoice'"/>
        </xpath>
        <xpath expr="//button[@name='action_register_payment']" position="attributes">
          <attribute name="invisible">state != "posted" or payment_state not in ["partial", "not_paid"] or move_type not in ["out_invoice", "out_refund", "in_invoice", "in_refund", "out_receipt", "in_receipt"] or authorized_transaction_ids or factoring_status in ["approved", "paid", "sent"]</attribute>
        </xpath>
        <xpath expr="//field[@name='ref']" position="before">
          <field name="factoring_status" readonly="1" invisible="move_type != 'out_invoice'"/>
          <field name="bizylife_backup_info" filename="Backup Document" invisible="move_type != 'out_invoice'" string="Factoring Backup Info"/>
        </xpath>
    </field>
</record>
<record id="view_move_factoring_tree" model="ir.ui.view">
    <field name="name">account.move.tree</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_out_invoice_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='invoice_date_due']" position="after">
        <field name="factoring_status" optional="show" widget="badge"/>
      </xpath>
    </field>
</record>
</odoo>