<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="factor_invoices_group">
        <field name="name">Factor Invoices</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="groups_id"  eval="[(4, ref('group_factoring'))]"/>
        <field name="state">code</field>
        <field name="code">
        if records:
            action = records.factor_invoice()
        </field>
    </record>
</odoo>
