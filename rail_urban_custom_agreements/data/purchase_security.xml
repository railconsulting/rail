<odoo>
    <data>
        <!--Category-->
        <record model="ir.module.category" id="category_urban_purchase">
            <field name="name">Compras: documentos</field>
            <field name="description">Helps to hide certain documents</field>
            <field name="sequence">9</field>
        </record>
        <!--Groups-->
        <record id="group_urban_create_edit_rfq" model="res.groups">
            <field name="name">Compras: Crear y editar solo requisicion y SdP</field>
            <field name="category_id" ref="category_urban_purchase"/>
            <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
            <field name="comment">Este usuario solo podra crear requisiciones y SdP, no podra validar las SdP.</field>
        </record>
        <record id="group_urban_create_edit_all" model="res.groups">
            <field name="name">Compras: Crear y editar todos los documentos</field>
            <field name="category_id" ref="category_urban_purchase"/>
            <field name="implied_ids" eval="[(4, ref('group_urban_create_edit_rfq'))]"/>
            <field name="comment">Este usuario podra crear y editar todos los documentos.</field>
        </record>
        <!--record id="purchase.group_purchase_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_urban_create_edit_rfq'))]"/>
        </record-->
    </data>
</odoo>