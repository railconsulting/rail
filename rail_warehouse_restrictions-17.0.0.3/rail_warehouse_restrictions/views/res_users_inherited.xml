<?xml version="1.0"?>
<odoo>
    <data>
        <record id="res_users_form_view_inherite_restrict_warehouse" model="ir.ui.view">
            <field name="name">res.users.form.view.inherite.restrict.warehouse</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']/group" position="before">
                    <group>
                        <group string="Restringir acceso al almacen">
                            <field name="restrict_warehouse_list"/>
                            <field name="warehouse_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True}"
                                invisible="not restrict_warehouse_list" required="restrict_warehouse_list"/>
                        </group>
                        <group string="Restringir acceso a las ubicaciones de almacenamiento">
                            <field name="restrict_location"/>
                            <field name="location_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True}"
                                  invisible="not restrict_location" required="restrict_location" />
                        </group>								  
						<group string="Restringir acceso a las operaciones de almacÃ©n">
                            <field name="restrict_operation"/>
                            <field name="operation_ids" widget="many2many_tags" options="{'no_create_edit': True,'no_create': True}"
                                invisible="not restrict_operation" required="restrict_operation" />                                   
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>