<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <!--   Adding button to start recording-->
    <t t-name="odoo_screen_recording.ScreenCaptureSystray">
            <div class="recordSystray.class" style="display:flex; align-items:center" t-on-click="_onClick">
                        <i class="fa fa-video-camera record" id='capture_screen'
                           style="color:black;"
                           aria-label="Record your screen" t-ref="record"/>
            </div>
    </t>
</templates>
