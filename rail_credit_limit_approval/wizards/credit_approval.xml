<odoo>
    <record id="sale_approval_wizard_form" model="ir.ui.view">
        <field name="name">Aprobacion de credito</field>
        <field name="model">credit.approval.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="partner_credit_warning" readonly="1" nolabel="1"/>              
                <footer>
                    <button string="Continuar" name="request_approval" class="oe_highlight" type="object"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="sale_approval_wizard_action" model="ir.actions.act_window">
        <field name="name">Aprobar credito</field>
        <field name="res_model">credit.approval.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="sale_approval_wizard_form"/>
    </record>
</odoo>