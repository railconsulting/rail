<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="rail_automatic_pricelist.OrderSummary" t-inherit="point_of_sale.OrderSummary" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('subentry')]" position="after">
            <t t-set="totalQty" t-value="getTotalQty()"/>
            <div class='total_qty' style='font-size: 16px;font-weight: normal;text-align: center'>Total Qty: <span
                    class="value"><t t-esc="totalQty"/> </span></div>
            <div class="total_discount_font"
                 style="color: #6ec89b;font-size: 16px;font-weight: normal;text-align: center;"/>
        </xpath>
    </t>

    <t t-name="rail_automatic_pricelist.OrderDetails" t-inherit="point_of_sale.OrderDetails" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('summary')]//div[hasclass('total')]//span[hasclass('value')]" position="after">
            <span class="badge">Total Cnt: </span>
            <span class="value">
                <t t-esc="total_qty" />
            </span>
        </xpath>
    </t>
</templates>